generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Crop {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  type        String
  plantedAt   DateTime
  harvestedAt DateTime?
  fieldId     String    @unique @db.ObjectId
  field       Field     @relation(fields: [fieldId], references: [id])
}

model Field {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  size     Float
  location String
  crops    Crop[]
}

model Machine {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  type         String
  purchaseDate DateTime
  condition    String
}

model Warehouse {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  location String
  capacity Int
  contents String?
}

model Worker {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  name    String
  role    String
  hiredAt DateTime
  salary  Float
}

model Animal {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  species   String
  birthDate DateTime
  health    String?
}
